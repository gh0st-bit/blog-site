{
  "name": "My Blog Site",
  "version": "1.0.0",
  "description": "A modern full-stack blog application with Next.js, MongoDB, and Docker support",
  "main": "next.config.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:build": "docker build -t blog-site .",
    "docker:run": "docker run -p 3000:3000 blog-site",
    "docker:compose": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "setup": "npm install && npm run dev"
  },
  "keywords": [
    "nextjs",
    "blog",
    "mongodb",
    "typescript",
    "tailwindcss",
    "docker"
  ],
  "author": "Blog Site Developer",
  "license": "MIT",
  "dependencies": {
    "next": "15.4.6",
    "react": "^18",
    "react-dom": "^18",
    "mongodb": "^6.3.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "eslint": "^8",
    "eslint-config-next": "15.4.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
